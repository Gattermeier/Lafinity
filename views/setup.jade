extends layout

block content
  .row
    form(method='post', action='/setup', enctype='application/x-www-form-urlencoded')
      div.col-xs-12.col-sm-6.col-md-4
        h3 SETUP ADMIN USER
        if exists
          .error.alert.alert-warning
            | That user already exists. Are you trying to&nbsp;
            a(href="/login") login
            | ?
        if invalid
          .error.alert.alert-danger Please enter a valid email address and password.
        div.form-group
          label(for='firstname') First Name
          input#firstname(name='firstname', class='form-control')
        div.form-group
          label(for='lastname') Last Name
          input#lastname(name='lastname', class='form-control')
        div.form-group
          label(for='email') Email
          input#email(name='email', class='form-control')
        div.form-group
          label(for='pass') Password
          input#pass(name='pass', type='password', class='form-control')
        input(type='submit', value='Create Admin', class="btn btn-primary")

